<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtTitle"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/txtYears"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:hint="@string/txtYears"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
         />

    <EditText
        android:id="@+id/txtLoan"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:hint="@string/txtLoan"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@+id/txtYears"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/txtInterest"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:hint="@string/txtInterest"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@+id/txtLoan"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/btnPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="CAR PAYMENT"
        android:textSize="26sp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtInterest"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/imgYears"
        android:layout_width="340dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/prius"
        />

    <TextView
        android:id="@+id/txtMonthlyPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>